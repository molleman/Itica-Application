<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/linearLayout1" android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">
        <LinearLayout 
        android:id="@+id/linearLayout2" 
        android:orientation="vertical" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:background = "#fff3df"
        >
            <LinearLayout 
            android:layout_height="75dip" 
            android:layout_width="match_parent" 
            android:id="@+id/linearLayout3" 
            android:orientation="horizontal"
            android:background="@drawable/dashboard_top" 
            >
                <ImageView  
                android:src="@drawable/itica1" 
                android:layout_width="wrap_content" 
                android:layout_height="match_parent" 
                android:id="@+id/imageView1"
                ></ImageView>
                <TextView
                android:id="@+id/textView1" 
                android:layout_width="wrap_content" 
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:typeface="serif" 
                android:textSize="40dip"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                ></TextView>
            </LinearLayout>
           
           
            <LinearLayout 
            android:layout_width="wrap_content" 
            android:paddingTop="25dip"
            android:id="@+id/linearLayout4" 
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            	<ImageButton 
            	style="@style/HomeButton"
            	android:layout_height="wrap_content" 
            	android:src="@drawable/mc_icon_directory" 
            	android:layout_width="160dip" android:id="@+id/directory_button1"
            	android:background="@android:color/transparent"
            	>
            	</ImageButton>
            	
            	<ImageButton 
            	style="@style/HomeButton"
            	android:layout_height="wrap_content" 
            	android:src="@drawable/mc_icon_direct_me" 
            	android:layout_width="160dip" android:id="@+id/locate_me_button1"
            	android:background="@android:color/transparent"	
            	>
            	
            	</ImageButton>
            
            </LinearLayout>
            <LinearLayout 
            android:layout_width="wrap_content" 
            android:id="@+id/linearLayout5" 
            android:orientation="horizontal" android:layout_height="wrap_content">
            
            	<ImageButton 
            	style="@style/HomeButton"
            	android:layout_height="wrap_content" 
            	android:src="@drawable/mc_icon_news" 
            	android:layout_width="160dip" android:id="@+id/news_button1"
            	android:background="@android:color/transparent"
            	
            	>
            	</ImageButton>
            	
            	<ImageButton 
            	style="@style/HomeButton"
            	android:layout_height="wrap_content" 
            	android:src="@drawable/mc_icon_offer" 
            	android:layout_width="160dip" android:id="@+id/offer_button1"
            	android:background="@android:color/transparent"
            	>
            	</ImageButton>
            
            	
            </LinearLayout>
            <LinearLayout 
            android:layout_width="wrap_content" 
            android:id="@+id/linearLayout6" 
            android:orientation="horizontal" android:layout_height="wrap_content">
            
            
            	<ImageButton 
            	style="@style/HomeButton"
            	android:layout_height="wrap_content" 
            	android:src="@drawable/mc_icon_search" 
            	android:layout_width="160dip" android:id="@+id/search_button1"
            	android:background="@android:color/transparent"
            	>
            	
            	</ImageButton>
            	
            	<ImageButton 
            	style="@style/HomeButton"
            	android:layout_height="wrap_content" 
            	android:src="@drawable/mc_icon_information" 
            	android:layout_width="160dip" android:id="@+id/sponsors_button1"
            	android:background="@android:color/transparent"
            	>
            	</ImageButton>
            
            </LinearLayout>
            
            <LinearLayout
             android:layout_width="wrap_content" 
            android:id="@+id/linearLayout7" 
            android:orientation="horizontal" android:layout_height="wrap_content"
            >
		           <TextView
		           	   android:background="@drawable/scrolling_textview_border"
				       android:text="Single-line text view that scrolls automatically if the text is too long to fit in the widget" 
				       android:singleLine="true" 
				       android:ellipsize="marquee"
				       android:marqueeRepeatLimit ="marquee_forever"
				       android:focusable="true"
				       android:textSize="30dip"
				       android:textColor="#FF0000"
				       android:focusableInTouchMode="true" 
				       android:scrollHorizontally="true"
				       android:layout_width="wrap_content" 
				       android:layout_height="wrap_content"/>
            
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
