<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.itica.android"
      android:versionCode="1"
      android:versionName="1.0">
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <application android:icon="@drawable/icon" android:name=".IticaManagerApplication" android:label="@string/app_name">
    
    <uses-library android:name="com.google.android.maps" />
	
	
    <activity android:name="IticaActivity"
              android:label="@string/app_name">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    
    <activity android:name=".DirectoryActivity" android:text="@string/directory" />
    <activity android:name=".NewsActivity" android:text="@string/news" />
    <activity android:name=".OffersActivity" android:text="@string/offers" />
		 
	<activity android:name=".DirectMeActivity" android:label="@string/direct_me"
     android:theme="@android:style/Theme.NoTitleBar"/> 
	
	<activity android:name=".ChipperInfoActivity" android:label="@string/chipper_info"
     android:theme="@android:style/Theme.NoTitleBar"/>
     
    </application>
</manifest>